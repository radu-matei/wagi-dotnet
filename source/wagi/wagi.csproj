<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Simon Davies</Authors>
    <Company>Microsoft</Company>
    <Description>Provides a configuration driven method to add WASM modules as route endpoints to ASP.Net Core applications using WAGI.WARNING: WAGI is experimental. It is not considered production-grade by its developers, neither is it "supported" software..</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Deislabs.WAGI</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/deislabs/wagi-dotnet</PackageProjectUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageReleaseNotes>https://github.com/deislabs/wagi-dotnet/releases</PackageReleaseNotes>
    <PackageTags>WASM;WAGI;WASI;Wasmtime;WebAssembly;</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <RootNamespace>Deislabs.WAGI</RootNamespace>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <TargetFramework>net5.0</TargetFramework>
    <!-- See https://github.com/NuGet/Home/issues/10791 -->
    <!-- <IncludeSymbols>true</IncludeSymbols> -->
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Wasmtime" Version="0.27.0-preview1" />
    <None Include="docs\readme.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
